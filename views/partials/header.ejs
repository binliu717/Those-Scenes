	<body>
	<nav class="navbar navbar-default" style="background-color: gray">
	  <div class="container-fluid">
		  <div class="navbar-header">
			  <a class="navbar-brand" href="/campgrounds" style="color: white" id="view">Those Scenes</a>
		  </div>
		  <div class="collapse navbar-collapse">
			  <ul class="nav navbar-nav navbar-right">
				  <%if(!currentUser){%>
				  <li><a href="/login" style="color: white" id="view">Login</a></li>
				  <li><a href="/register" style="color: white" id="view">Sign Up</a></li>
				  <%} else{%>
				  <li><a href="#" id="view" style="color: white">Signed In as <%= currentUser.username %></a></li>
				  <li><a href="/logout" id="view" style="color: white">Logout</a></li>
				  <%}%>
			  </ul>
		  </div>
	  </div>
  	</nav>
<div class="container">
	<% if(error && error.length > 0){ %>
	<div class="alert alert-danger" role="alert">
		<%= error %>
	</div>
	<% } %>
	<% if(success && success.length > 0){ %>
	<div class="alert alert-success" role="alert">
		<%= success %>
	</div>
	<% } %>
</div>